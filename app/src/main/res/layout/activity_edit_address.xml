<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_shipping_address"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="收货地址"
            android:textColor="#545353"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/talk_order_details"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="保存"
            android:textColor="#848484"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/back_take_delivery"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_margin="12dp"
            android:src="@mipmap/back" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvHint_shipping_address"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/rl_shipping_address"
        android:background="#f0f0f0" />

    <LinearLayout
        android:id="@+id/rl_edit_userName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvHint_shipping_address"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:hint="请输入姓名"
            android:layout_marginLeft="12dp"
            />

        <EditText
            android:id="@+id/edit_tel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:hint="请输入手机号"
            android:layout_marginLeft="12dp"
            />

        <EditText
            android:id="@+id/edit_province"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:hint="请输入xxx省"
            android:layout_marginLeft="12dp"
            />

        <EditText
            android:id="@+id/edit_city"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:hint="请输入xxx市"
            android:layout_marginLeft="12dp"
            />

        <EditText
            android:id="@+id/edit_area"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:hint="请输入xxx区"
            android:layout_marginLeft="12dp"
            />

        <EditText
            android:id="@+id/edit_detail_area"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:hint="请输入详细地址"
            android:layout_marginLeft="12dp"
            />

    </LinearLayout>


















</RelativeLayout>