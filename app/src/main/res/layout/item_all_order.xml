<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="#dbdbdb"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userInfo_all_order"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/select_finder"
            android:scaleType="fitXY"
            android:src="@mipmap/linsir"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/p1_all_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手工陶艺杯"
                    android:textColor="#2a2a2a"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="12dp"
                    android:text="买家已付款"
                    android:textColor="#aeaeae"
                    android:textSize="10sp"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/p2_all_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手工陶艺杯"
                android:textColor="#2a2a2a"
                android:textSize="12sp"
                />


            <TextView
                android:id="@+id/p3_all_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手工陶艺杯"
                android:textColor="#2a2a2a"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="#dbdbdb"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price_all_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥ 168"
                    android:textColor="#aeaeae"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/count_all_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="数量：1"
                    android:textColor="#aeaeae"
                    android:textSize="12sp"/>


            </LinearLayout>

            <TextView
                android:id="@+id/where_all_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="买手发货地区：河南"
                android:textColor="#aeaeae"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/hint_all_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="预计三天到达"
                android:textColor="#aeaeae"
                android:textSize="12sp"
                />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
