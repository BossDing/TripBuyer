<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >


        <ImageView

            android:id="@+id/tv_user_info_item_seller"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_margin="12dp"
            />

        <TextView
            android:id="@+id/tv_address_item_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="96dp"
            android:maxLines="1"
            android:text=""
            android:textColor="#2a2a2a"
            android:textSize="13sp"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="14dp"
            android:background="@color/orange_500"
            android:layout_toRightOf="@+id/tv_address_item_seller"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="12dp"

            />


        <ImageView
            android:id="@+id/c1"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:src="@mipmap/fa_bu_zhe"
            android:layout_marginTop="4dp"
            android:layout_alignTop="@+id/tv_user_name_item_address"
            android:layout_marginLeft="96dp"
            />

        <TextView
            android:id="@+id/tv_user_name_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address_item_seller"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/c1"
            android:layout_toEndOf="@+id/c1"
            android:layout_marginLeft="4dp"
            android:text=""
            android:textSize="12sp"/>


        <ImageView
            android:id="@+id/c2"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_alignTop="@+id/tv_time_item_seller"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="96dp"
            android:src="@mipmap/chu_xing_shi_jian"/>



        <TextView
            android:id="@+id/tv_time_item_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_name_item_address"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@+id/c2"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/c2"
            android:text=""
            android:textSize="12sp"/>


    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#F0F0F0"/>

</LinearLayout>

