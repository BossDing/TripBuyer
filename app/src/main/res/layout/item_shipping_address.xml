        />


<TextView
    android:layout_below="@+id/tv_shipping_address_item"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#d8d8d8"
    />


</RelativeLayout>
