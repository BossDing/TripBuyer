<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_place1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="11dp"
            android:text="日本-东京"
            android:textColor="#545353"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_place2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_place1"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="11dp"
            android:text="日本-东京"
            android:textColor="#545353"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_place3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_place2"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="11dp"
            android:text="日本-东京"
            android:textColor="#545353"
            android:textSize="12sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/city_name"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_place_1"
            android:layout_width="31dp"
            android:layout_height="21dp"
            android:layout_marginTop="10dp"
            android:background="@color/orange_500"/>


        <ImageView
            android:id="@+id/iv_place_2"
            android:layout_width="31dp"
            android:layout_height="21dp"
            android:layout_marginTop="4dp"
            android:background="@color/orange_500"/>

        <ImageView
            android:id="@+id/iv_place_3"
            android:layout_width="31dp"
            android:layout_height="21dp"
            android:layout_marginTop="4dp"
            android:background="@color/orange_500"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="11dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已出行"
            />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/go"

            />


    </LinearLayout>

    <TextView
        android:id="@+id/time_me_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_name"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="11dp"
        android:text="2016.08.05-20"
        android:layout_marginBottom="11dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dbdbdb"
        android:layout_below="@+id/time_me_route"

        />

</RelativeLayout>
