<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_shipping_address"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="我的订单"
            android:textColor="#545353"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/manage_shipping"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="管理"
            android:textColor="#848484"
            android:textSize="12sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/back_shipping_address"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_margin="12dp"
            android:src="@mipmap/back"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/hint_me_order"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="发布悬赏令后，即可查看我的悬赏令"
        android:visibility="gone"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/me_order_"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v7.widget.RecyclerView>


</LinearLayout>
